<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="25dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="25dp"
    android:orientation="vertical"
    tools:context="com.tugas.farhanfaizakbar.farhanfaizakbar_1202150095_modul1.SecondActivity">

    <TextView
        android:id="@+id/judul1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/Makan_Malam"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/judul2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/Dengan_Milea"
        android:layout_marginBottom="24dp"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/hasilTempat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Menu"
        android:layout_marginBottom="10dp"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/hasilMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/porsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Porsi"
        android:layout_marginBottom="10dp"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/hasilPorsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Harga"
        android:layout_marginBottom="10dp"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/hasilHarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"
        android:textSize="20sp" />

</LinearLayout>
